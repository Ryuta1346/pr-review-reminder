{
  "name": "pr-review-reminder",
  "version": "1.0.0",
  "description": "Send PR review reminders to Slack based on labels",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node24 --outfile=dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ryuta1346/pr-review-reminder.git"
  },
  "keywords": [
    "github-actions",
    "slack",
    "pr-review",
    "reminder"
  ],
  "author": "Ryuta1346",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ryuta1346/pr-review-reminder/issues"
  },
  "homepage": "https://github.com/Ryuta1346/pr-review-reminder#readme",
  "dependencies": {
    "@actions/core": "^1.11.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@vitest/coverage-v8": "^2.1.9",
    "esbuild": "^0.24.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
